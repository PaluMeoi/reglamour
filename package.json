{
  "name": "reglamour",
  "displayName": "Reglamour",
  "version": "0.0.1",
  "description": "Glamourer tools for Eorzean Collection",
  "author": "Palu (reglamour@meoi.ninja)",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build && plasmo build --target=firefox-mv2",
    "package": "plasmo package --target=firefox-mv2",
    "firefox-dev": "plasmo dev --target=firefox-mv2"
  },
  "dependencies": {
    "@mantine/core": "7.4.2",
    "@mantine/form": "^7.14.1",
    "@mantine/hooks": "7.4.2",
    "@plasmohq/messaging": "^0.6.2",
    "@plasmohq/storage": "^1.13.0",
    "mantine-form-zod-resolver": "^1.1.0",
    "pako": "^2.1.0",
    "plasmo": "0.89.4",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@babel/core": "7.23.7",
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "postcss": "8.4.33",
    "postcss-preset-mantine": "1.12.3",
    "postcss-simple-vars": "7.0.1",
    "prettier": "3.2.4",
    "typescript": "5.3.3"
  },
  "manifest": {
    "host_permissions": [
      "https://ffxiv.eorzeacollection.com/glamour/*"
    ],
    "permissions": [
      "activeTab",
      "clipboardRead",
      "clipboardWrite"
    ],
    "browser_specific_settings": {
      "gecko": {
        "id": "$FIREFOX_EXT_ID"
      }
    }
  }
}
